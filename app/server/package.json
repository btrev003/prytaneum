{
    "name": "@app/server",
    "private": true,
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "dotenv -c production -- ts-node-dev -r tsconfig-paths/register --transpile-only --exit-child ./src/index.ts",
        "dev": "dotenv -c development -- ts-node-dev --watch ./src/features -r tsconfig-paths/register --rs --transpile-only --no-notify --exit-child ./src/index.ts",
        "add-feat": "ts-node-dev --script-mode ./scripts/add-feature.ts"
    },
    "dependencies": {
        "@app/prisma": "workspace:app/prisma",
        "@graphql-tools/load-files": "^6.3.2",
        "@graphql-tools/merge": "^6.2.13",
        "@graphql-tools/schema": "^7.1.3",
        "altair-fastify-plugin": "^4.0.2",
        "bcryptjs": "^2.4.3",
        "fastify": "^3.15.1",
        "fastify-cookie": "^5.3.0",
        "fastify-cors": "^6.0.2",
        "fastify-multipart": "^4.0.7",
        "form-data": "^4.0.0",
        "graphql": "^15.5.0",
        "graphql-relay": "github:DevelopmentByDavid/graphql-relay-js.git#commit=edab2b08c5ce9a81c7ded3cc817953b14c505e3e",
        "jsonwebtoken": "^8.5.1",
        "mailgun.js": "^3.4.0",
        "mercurius": "^7.6.1",
        "mercurius-codegen": "^1.6.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2",
        "@types/busboy": "^0.2.4",
        "@types/jsonwebtoken": "^8",
        "@types/mailgun-js": "^0.22.11",
        "@types/node": "^15.0.1",
        "dotenv": "^8.2.0",
        "dotenv-cli": "^4.0.0",
        "dotenv-expand": "^5.1.0",
        "ts-node-dev": "^1.1.6",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    }
}
